<?xml version="1.0"?>

<project name="argument" default="help" >

	<description>
		system: "Gobo Eiffel Argument Library Unit Tester"
		copyright: "Copyright (c) 2006-2016, Bernd Schoeller and others"
		license: "MIT License"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<inherit>
		<parent location="${GOBO}/tool/geant/config/test.eant">
			<redefine target="init_system"/>
		</parent>
	</inherit>


<!-- Implementation -->

	<target name="init_system">
		<set name="system" value="xargument"/>
		<set name="library" value="argument"/>
		<set name="system_dir" value="${GOBO}/library/${library}/test/unit"/>
	</target>

</project>
