<?xml version="1.0"?>

<project name="argument_example_test" default="help">

	<description>
		system: "Gobo Eiffel Argument Library Example Tester"
		copyright: "Copyright (c) 2006-2016, Eric Bezault and others"
		license: "MIT License"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<inherit>
		<parent location="${GOBO}/library/common/config/test.eant">
			<redefine target="other_clean"/>
			<redefine target="init_system"/>
		</parent>
	</inherit>


<!-- Implementation -->

	<target name="other_clean" depend="init" export="NONE">
		<description>
			Remove other intermediary generated files.
		</description>

		<delete directory="Tap_example"/>
	</target>

	<target name="init_system" export="NONE">
		<set name="system" value="xargument"/>
		<set name="library" value="argument"/>
		<set name="system_dir" value="${GOBO}/library/${library}/test/example"/>
	</target>

</project>
