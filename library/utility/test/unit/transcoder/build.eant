<?xml version="1.0"?>

<project name="transcoder" default="help">

	<description>
		system: "Gobo Eiffel Transcoder Library Unit Tester"
		copyright: "Copyright (c) 2005-2016, Colin Adams and others"
		license: "MIT License"
	</description>

	<inherit>
		<parent location="${GOBO}/library/common/config/test.eant">
			<redefine target="init_system"/>
		</parent>
	</inherit>

<!-- Implementation -->

	<target name="init_system" export="NONE">
		<set name="system" value="xtranscoder"/>
		<set name="library" value="utility"/>
		<set name="system_dir" value="${GOBO}/library/${library}/test/unit/transcoder"/>
	</target>

</project>
