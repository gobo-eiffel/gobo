<?xml version="1.0"?>

<project name="tools" default="help">

	<description>
		system: "Gobo Eiffel Tools Example Tester"
		copyright: "Copyright (c) 2003-2016, Eric Bezault and others"
		license: "MIT License"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<inherit>
		<parent location="${GOBO}/misc/test.eant">
			<redefine target="other_clean"/>
			<redefine target="init_system"/>
		</parent>
	</inherit>


<!-- Implementation -->

	<target name="other_clean" depend="init">
		<description>
			Remove other intermediary generated files.
		</description>

		<delete directory="Tbang2create" fail_on_error="false"/>
		<delete directory="Tpretty_printer" fail_on_error="false"/>
	</target>

	<target name="init_system">
		<set name="system" value="xtools"/>
		<set name="library" value="tools"/>
		<set name="system_dir" value="${GOBO}/library/${library}/test/example"/>
	</target>

</project>
