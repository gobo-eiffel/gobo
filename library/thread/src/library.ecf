<?xml version="1.0" encoding="ISO-8859-1"?>
<system
	xmlns="http://www.eiffel.com/developers/xml/configuration-1-22-0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.eiffel.com/developers/xml/configuration-1-22-0 http://www.eiffel.com/developers/xml/configuration-1-22-0.xsd"
	name="thread"
	uuid="E1FFE100-60B0-0007-0001-000000000001"
	library_target="thread"
>
	<description>
		description: "ECF file for the Gobo Eiffel Thread Library"
		library: "Gobo Eiffel Time Library"
		copyright: "Copyright (c) 2017-2018, Eric Bezault and others"
		license: "MIT License"
	</description>
	<target name="thread">
		<root all_classes="true"/>
		<file_rule>
			<exclude>/\.svn$</exclude>
			<exclude>/\.git$</exclude>
			<exclude>/EIFGENs$</exclude>
		</file_rule>
		<capability>
			<concurrency support="none"/>
		</capability>
		<variable name="GOBO_LIBRARY" value="../../.."/>
		<library name="free_elks" location="${GOBO_LIBRARY}/library/free_elks/library_${GOBO_EIFFEL}.ecf" readonly="true"/>
		<cluster name="thread" location="./" recursive="true"/>
	</target>
</system>
