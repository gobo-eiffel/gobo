<?xml version="1.0"?>

<project name="thread_unit_test" default="help">

	<description>
		system: "Gobo Eiffel Thread Library Unit Tester"
		copyright: "Copyright (c) 2017, Eric Bezault and others"
		license: "MIT License"
	</description>

	<inherit>
		<parent location="${GOBO}/library/common/config/test.eant">
			<redefine target="init_system"/>
		</parent>
	</inherit>

<!-- Implementation -->

	<target name="init_system" export="NONE">
		<set name="system" value="xthread"/>
		<set name="library" value="thread"/>
		<set name="system_dir" value="${GOBO}/library/${library}/test/unit"/>
	</target>

</project>
