<?xml version="1.0"?>

<project name="pcre" default="help">

	<description>
		system: "PCRE regular expression usage example"
		copyright: "Copyright (c) 2002-2016, Harald Erdbruegger and others"
		license: "MIT License"
	</description>

	<inherit>
		<parent location="${GOBO}/library/common/config/eiffel.eant">
			<redefine target="init_system"/>
		</parent>
	</inherit>

<!-- Implementation -->

	<target name="init_system" export="NONE">
		<set name="system" value="pcre"/>
		<set name="library" value="regexp"/>
		<set name="system_dir" value="${GOBO}/library/${library}/example/${system}"/>
	</target>

</project>
