	<title>unset</title>

	<section id="unset_description">
		<title>Description</title>
		<para>
			Remove a variable from the current project.
		</para>
	</section>

	<section id="unset_parameters">
		<title>Parameters</title>

		<variablelist>
			<varlistentry>
				<term>name</term>
				<listitem>
					<para><emphasis>Description: </emphasis>Name of variable to be removed</para>
				</listitem>
				<listitem>
					<para><emphasis>Domain: </emphasis>Identifier</para>
				</listitem>
				<listitem>
					<para><emphasis>Default: </emphasis>-</para>
				</listitem>
			</varlistentry>

		</variablelist>

	</section>

	<section id="unset_specification">
		<title>RNG Specification</title>

		<programlisting><![CDATA[
  <define name="unset">
    <element name="unset">
      <ref name="dir_if_unless"/>
      <attribute name="name"/>
    </element>
  </define>
]]>
		</programlisting>
	</section>

	<section id="unset_examples">
		<title>Examples</title>

		<programlisting><![CDATA[
  <unset name="directory"/>
]]>
		</programlisting>
	</section>

</chapter>
