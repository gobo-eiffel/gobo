<?xml version="1.0"?>

<project name="src" default="help">

	<description>
		description: "Eiffel Ant file for testing Gobo Eiffel tools"
		copyright: "Copyright (c) 2001-2008, Eric Bezault and others"
		license: "MIT License"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<target name="help">
		<echo message="usage:"/>
		<echo message="   geant install"/>
		<echo message="   geant test"/>
		<echo message="   geant test_ge"/>
		<echo message="   geant test_ise"/>
		<echo message="   geant test_se"/>
		<echo message="   geant test_debug"/>
		<echo message="   geant test_debug_ge"/>
		<echo message="   geant test_debug_ise"/>
		<echo message="   geant test_debug_se"/>
		<echo message="   geant clean"/>
		<echo message="   geant clobber"/>
	</target>

	<target name="install" depend="init">
		<description>
			Install the Gobo Eiffel tools testers.
		</description>

		<geant target="do_all" arguments="install,false"/>
	</target>

	<target name="test" depend="init">
		<description>
			Test Gobo tools.
			Use Eiffel compiler set in ${GOBO_EIFFEL}
			or 'se' if this variable is not defined.
		</description>

		<geant target="do_all" arguments="test,true"/>
	</target>

	<target name="test_ge" depend="init">
		<description>
			Test Gobo tools with Gobo Eiffel.
		</description>

		<geant target="do_all" arguments="test_ge,true"/>
	</target>

	<target name="test_ise" depend="init">
		<description>
			Test Gobo tools with ISE Eiffel.
		</description>

		<geant target="do_all" arguments="test_ise,true"/>
	</target>

	<target name="test_se" depend="init">
		<description>
			Test Gobo tools with SmartEiffel.
		</description>

		<geant target="do_all" arguments="test_se,true"/>
	</target>

	<target name="test_debug" depend="init">
		<description>
			Test Gobo tools in debug mode.
			Use Eiffel compiler set in ${GOBO_EIFFEL}
			or 'se' if this variable is not defined.
		</description>

		<geant target="do_all" arguments="test_debug,true"/>
	</target>

	<target name="test_debug_ge" depend="init">
		<description>
			Test Gobo tools with Gobo Eiffel in debug mode.
		</description>

		<geant target="do_all" arguments="test_debug_ge,true"/>
	</target>

	<target name="test_debug_ise" depend="init">
		<description>
			Test Gobo tools with ISE Eiffel in debug mode.
		</description>

		<geant target="do_all" arguments="test_debug_ise,true"/>
	</target>

	<target name="test_debug_se" depend="init">
		<description>
			Test Gobo tools with SmartEiffel in debug mode.
		</description>

		<geant target="do_all" arguments="test_debug_se,true"/>
	</target>

	<target name="clean" depend="init">
		<description>
			Remove intermediary generated files.
		</description>

		<geant target="do_all" arguments="clean,false"/>
	</target>

	<target name="clobber" depend="init">
		<description>
			Remove all generated files.
		</description>

		<geant target="do_all" arguments="clobber,false"/>
	</target>

<!-- Implementation -->

	<target name="init">
		<!-- do nothing -->
	</target>

	<target name="do_all" depend="init">
		<description>
			Call 'geant' with the same target ${target} (first argument)
			in all subdirectories. Call 'clean' after each target has
			been executed if ${do_clean} (second argument) is true.
		</description>
		<argument name="target"/>
		<argument name="do_clean"/>

			<!--
				The attribute "if" does not seem to interpret arguments.
				Therefore set the variable "do_clean" with the value
				of argument "do_clean".
			-->
		<set name="do_clean" value="${do_clean}"/>
		<geant file="build.eant" target="${target}" dir="geant"/>
		<geant file="build.eant" target="clean" dir="geant" if="${do_clean}=true"/>
		<geant file="build.eant" target="${target}" dir="gec"/>
		<geant file="build.eant" target="clean" dir="gec" if="${do_clean}=true"/>
		<geant file="build.eant" target="${target}" dir="gelex"/>
		<geant file="build.eant" target="clean" dir="gelex" if="${do_clean}=true"/>
		<geant file="build.eant" target="${target}" dir="gepp"/>
		<geant file="build.eant" target="clean" dir="gepp" if="${do_clean}=true"/>
		<geant file="build.eant" target="${target}" dir="getest"/>
		<geant file="build.eant" target="clean" dir="getest" if="${do_clean}=true"/>
		<geant file="build.eant" target="${target}" dir="gexace"/>
		<geant file="build.eant" target="clean" dir="gexace" if="${do_clean}=true"/>
		<geant file="build.eant" target="${target}" dir="geyacc"/>
		<geant file="build.eant" target="clean" dir="geyacc" if="${do_clean}=true"/>
	</target>

</project>
