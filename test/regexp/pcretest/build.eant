<?xml version="1.0"?>

<project name="pcretest" default="help">

	<description>
		description: "Eiffel Ant file for 'pcretest'"
		system: "PCRE Test"
		copyright: "Copyright (c) 2002, Eric Bezault and others"
		license: "Eiffel Forum License v2 (see forum.txt)"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<inherit>
		<parent location="${GOBO}/misc/eiffel.eant">
			<redefine target="other_clean"/>
			<redefine target="init_system"/>
		</parent>
	</inherit>


<!-- Implementation -->

	<target name="other_clean" depend="init">
		<description>
			Remove other intermediary generated files.
		</description>

		<delete file="out1"/>
		<delete file="out2"/>
		<delete file="out3"/>
		<delete file="out4"/>
		<delete file="out5"/>
		<delete file="out6"/>
		<delete file="xcompile.log"/>
	</target>

	<target name="init_system">
		<set name="system" value="pcretest"/>
		<set name="system_dir" value="${GOBO}/test/regexp/${system}"/>
	</target>

</project>
