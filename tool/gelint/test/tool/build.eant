<?xml version="1.0"?>

<project name="gelint" default="help">

	<description>
		system: "Gobo Eiffel Lint Tester"
		copyright: "Copyright (c) 2006-2016, Eric Bezault and others"
		license: "MIT License"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<inherit>
		<parent location="${GOBO}/tool/geant/config/test.eant">
			<redefine target="other_clean"/>
			<redefine target="init_system"/>
		</parent>
	</inherit>


<!-- Implementation -->

	<target name="other_clean" depend="init">
		<description>
			Remove other intermediary generated files.
		</description>

		<delete directory="Tgelint"/>
	</target>

	<target name="init_system">
		<set name="system" value="xgelint_tool"/>
		<set name="tool" value="gelint"/>
		<set name="system_dir" value="${GOBO}/tool/${tool}/test/tool"/>
	</target>

</project>
