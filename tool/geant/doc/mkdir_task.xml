	<title>mkdir</title>

	<section id="mkdir_description">
		<title>Description</title>
		<para>
			Create a directory.
		</para>
	</section>

	<section id="mkdir_parameters">
		<title>Parameters</title>

		<variablelist>
			<varlistentry>
				<term>directory</term>
				<listitem>
					<para><emphasis>Description: </emphasis>Directory to be created</para>
				</listitem>
				<listitem>
					<para><emphasis>Domain: </emphasis>Valid directoryname or path</para>
				</listitem>
				<listitem>
					<para><emphasis>Default: </emphasis>-</para>
				</listitem>
			</varlistentry>
		</variablelist>
	</section>

	<section id="mkdir_specification">
		<title>RNG Specification</title>

		<programlisting><![CDATA[
  <define name="mkdir">
    <element name="mkdir">
      <ref name="dir_if_unless"/>
      <attribute name="directory"/>
    </element>
  </define>
]]>
	</programlisting>
	</section>

	<section id="mkdir_examples">
		<title>Examples</title>
	<programlisting><![CDATA[
  <mkdir directory="out"/>

  <mkdir directory="some/new/directory"/>
]]>
	</programlisting>
	</section>

</chapter>
