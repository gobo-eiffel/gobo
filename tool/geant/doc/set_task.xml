	<title>set</title>

	<section id="set_description">
		<title>Description</title>
		<para>
			Set a variable's value.
		</para>
	</section>

	<section id="set_parameters">
		<title>Parameters</title>

		<variablelist>
			<varlistentry>
				<term>name</term>
				<listitem>
					<para><emphasis>Description: </emphasis>Name of variable</para>
				</listitem>
				<listitem>
					<para><emphasis>Domain: </emphasis>Identifier</para>
				</listitem>
				<listitem>
					<para><emphasis>Default: </emphasis>-</para>
				</listitem>
			</varlistentry>

			<varlistentry>
				<term>value</term>
				<listitem>
					<para><emphasis>Description: </emphasis>Value to be assigned</para>
				</listitem>
				<listitem>
					<para><emphasis>Domain: </emphasis>String</para>
				</listitem>
				<listitem>
					<para><emphasis>Default: </emphasis>-</para>
				</listitem>
			</varlistentry>

		</variablelist>

	</section>

	<section id="set_specification">
		<title>RNG Specification</title>

		<programlisting><![CDATA[
  <define name="set">
    <element name="set">
      <ref name="dir_if_unless"/>
      <attribute name="name"/>
      <attribute name="value"/>
    </element>
  </define>
]]>
		</programlisting>
	</section>

	<section id="set_examples">
		<title>Examples</title>

		<programlisting><![CDATA[
  <set name="directory" value="tmp"/>
]]>
		</programlisting>
	</section>

